#:kivy 1.8
<physObject>:
    rho: self.rho
    centerX: 0.5*(self.pos[0]+self.right)
    centerY: 0.5*(self.pos[1]+self.top)
    canvas:
        Color:
            rgb: 1,1,1
        Ellipse:
            pos: self.pos
            size: self.size
<Cosmos>:
    size: self.size
    rl: self.rl
        on_touch_down: print('Relative: {}'.format(self.to_local(*args[1].pos)))
        canvas:
            Color:
                rgb: 1,1,1
            Ellipse:
                pos:0,0
                size:20,20
